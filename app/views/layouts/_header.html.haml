#notification
  - flash.each do |name, msg|
    = content_tag :div, msg, :id => "flash_#{name}"
#header
  %h1= link_to t('app_name'), root_path
  - if !current_user 
    %ul#landing_nav
      %li= link_to t('.signin'), new_user_session_path, :class => 'login'
      %li= link_to t('.signup'), new_user_registration_path, :class => 'signup'

  - elsif (current_user || !@landing_page)
    %ul#user_menu
      #drop_down_symbol
        â–¼
      .avatar
        = user_image_tag(:thumb_small)
      = link_to current_user.display_name + "@windhood", '#'
      %li= link_to t('.view_profile'), '#'
      %li= link_to t('.edit_profile'), edit_person_path(current_user)
      %li= link_to t('.account_settings'), edit_user_path(current_user)
      %li= link_to t('.logout'), destroy_user_session_path
%nav#main_nav
  = render 'layouts/main_nav'